<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<StackPane fx:controller="controllers.AdminPageController"
           xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           stylesheets="/css/adminStyle.css"
           prefWidth="600" prefHeight="400">

    <HBox spacing="0">
        <!-- ðŸ”¹ Sidebar laterale -->
        <VBox spacing="20" styleClass="sidebar" alignment="TOP_CENTER" prefWidth="150" style="-fx-background-color: #2c3e50; -fx-padding: 20;">
            <!--<Button text="Indietro" fx:id="backb" styleClass="sidebar-button"/>-->
            <Button text="Assistenza" styleClass="sidebar-button"/>
            <Button text="Logout" fx:id="logOutButton" styleClass="sidebar-button"/>
        </VBox>

        <VBox spacing="10">
            <HBox>
                <GridPane alignment="CENTER" hgap="10" vgap="10" >
                    <padding>
                        <Insets top="20" right="20" bottom="20" left="70"/>
                    </padding>

                    <HBox GridPane.columnIndex="0" GridPane.rowIndex="0">

                        <GridPane alignment="CENTER" hgap="10" vgap="10" >


                            <!-- Logout e benvenuto -->
                            <!--<Button fx:id="logoutButton" text="LogOut" GridPane.columnIndex="12" GridPane.rowIndex="0"/>-->
                            <Label fx:id="label" text="Benvenuto nella pagina Admin!" styleClass="title-label" GridPane.columnIndex="0" GridPane.rowIndex="0"/>


                            <!-- Sezione aggiunta utente -->
                            <Label text="Se si desidera aggiungere un nuovo utente, compilare i campi sottostanti:" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.columnSpan="12"/>
                            <Label text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                            <TextField fx:id="usernameInput" promptText="Username" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                            <Label text="Tipo utente:" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                            <ComboBox promptText="Tipo utente" fx:id="tipoUtenteInput" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                            <Label text="Password:" GridPane.columnIndex="3" GridPane.rowIndex="2"/>
                            <PasswordField fx:id="passwordInput" promptText="Password" GridPane.columnIndex="3" GridPane.rowIndex="3"/>
                            <Label text="Medico (opzionale):" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                            <TextField fx:id="medicoInput" promptText="Medico (opzionale)" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
                            <Button fx:id="addButton" text="Aggiungi" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
                            <Button fx:id="updateButton" text="Aggiorna" GridPane.columnIndex="3" GridPane.rowIndex="5"/>

                        </GridPane>
                    </HBox>

                    <HBox  GridPane.columnIndex="0" GridPane.rowIndex="3">
                        <GridPane alignment="CENTER" hgap="10" vgap="10" >

                            <!-- Info tabella -->
                            <Label fx:id="label2" text="Tabella utenti :" GridPane.columnIndex="0" GridPane.rowIndex="0"/>

                            <!-- Tabella utenti -->
                            <TableView fx:id="table" prefHeight="250" prefWidth="500" VBox.vgrow="ALWAYS" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.columnSpan="11">
                                <columns>
                                    <TableColumn fx:id="usernameCol" text="Username"/>
                                    <TableColumn fx:id="tipoUtenteCol" text="Tipo Utente"/>
                                    <!--<TableColumn fx:id="passwordCol" text="Password"/>-->
                                    <TableColumn fx:id="medicoCol" text="Medico"/>
                                    <TableColumn fx:id="infoCol" text="Informazioni" minWidth="210"/>
                                </columns>
                            </TableView>

                            <!-- Bottone elimina -->
                            <Button fx:id="cancelButton" text="Elimina" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
                            <Button fx:id="profiloButton" text="Profilo" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

                        </GridPane>
                    </HBox>

                </GridPane>
            </HBox>
            <Region prefHeight="110" style="-fx-background-color: transparent;"/>
            <fx:include source="footer.fxml"/>
        </VBox>

    </HBox>
</StackPane>